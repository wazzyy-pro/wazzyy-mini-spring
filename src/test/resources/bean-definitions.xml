<?xml version="1.0" encoding="UTF-8"?>
<beans>
    <!-- 定义 Person Bean -->
    <bean id="person" class="minispring.test.bean.Person">
        <property name="name" value="张三"/>
        <property name="age" value="30"/>
        <property name="address" ref="address"/>
    </bean>
    
    <!-- 定义 Address Bean -->
    <bean id="address" class="minispring.test.bean.Address">
        <property name="city" value="北京市"/>
        <property name="district" value="朝阳区"/>
        <property name="street" value="建国路"/>
    </bean>
</beans> 